<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background02"
    tools:context=".baladiyat">
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:onClick="openbackActivity"
            android:padding="5dp"
            android:src="@drawable/ic_back_white"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/TitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="البلديات"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_below="@+id/toolbarRl"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/bayadhaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openbayadhaActivity"
                android:text="البياضة"
                android:textSize="26sp" />

            <Button
                android:id="@+id/hassikhalifaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openhassikhalifaActivity"
                android:text="حاسي خليفة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/debillaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opendebillaActivity"
                android:text="الدبيلة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/magrinBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openmagrinActivity"
                android:text="المقرن"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/djedidaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opendjedidaActivity"
                android:text="الجديدة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/sidiounBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opensidiounActivity"
                android:text="سيدي عون"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/zougoumBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openzogomActivity"
                android:text="الزقم"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/hassaniBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openhassaniActivity"
                android:text="حساني عبد الكريم"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/regibaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openregibaActivity"
                android:text="الرقيبة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/guemarBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opengeumarActivity"
                android:text="قمار"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/gamraBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openghaamraActivity"
                android:text="غمرة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/tegzoutBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openteghzoutActivity"
                android:text="تغزوت"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/kouininBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openkouininActivity"
                android:text="كوينين"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/warmasBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openouarmassActivity"
                android:text="ورماس"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/mihwanssaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openoumihouanssaActivity"
                android:text="أميه ونسة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/wedlaalndaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openouedaalandaActivity"
                android:text="وادي العلندة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/rebbahBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="openrabbahActivity"
                android:text="الرباح"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/nekhlaouglaBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opennekhlaouglaActivity"
                android:text="النخلة + العقلة"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

            <Button
                android:id="@+id/trifawiBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button01"
                android:onClick="opentrifaouiActivity"
                android:text="الطريفاوي"
                android:textSize="26sp"
                app:shapeAppearance="@style/styleRoundeCornersButton" />

        </LinearLayout>


    </ScrollView>



</RelativeLayout>